+static void ip_cmsg_recv_ipsec_refinfo(struct msghdr *msg, struct sk_buff *skb)
+{
+	struct ipsec_saref_ip_cmsg_ops *ops;
+
+	rcu_read_lock_bh();
+	ops = rcu_dereference(ipsec_saref_ip_cmsg_ops);
+	if (ops->recv_refinfo)
+		ops->recv_refinfo(msg, skb);
+	rcu_read_unlock_bh();
+}
