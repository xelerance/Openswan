+
+	rcu_read_lock_bh();
+	ops = rcu_dereference(ipsec_saref_ip_cmsg_ops);
+	if (ops->send_refinfo)
+		rc = ops->send_refinfo(cmsg, ipc);
+	rcu_read_unlock_bh();
+
+	return rc;
+}
