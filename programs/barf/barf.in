	fi
fi
_________________________ ipfwadm
if test -r /sbin/ipfwadm
then
	ipfwadm -F -l -n -e
_________________________
	ipfwadm -I -l -n -e
_________________________
	ipfwadm -O -l -n -e
_________________________
	ipfwadm -M -l -n -e
