#!/bin/sh

# This script expects the following variables to be in the environment:
# DESTDIR
# OPENSWANSRCDIR
# ARCH
# IPSECVERSION

#set -e

cd $DESTDIR 
rm -f *.tar.gz 

mkdir -p $OPENSWANSRCDIR/packaging/ipkg/ipkg
cp $OPENSWANSRCDIR/packaging/ipkg/debian-binary . 
cp $OPENSWANSRCDIR/packaging/ipkg/conffiles . 

cat $OPENSWANSRCDIR/packaging/ipkg/control-freeswan.dist | sed s/VERSION/$IPSECVERSION/ |sed s/ARCH/$ARCH/ > $OPENSWANSRCDIR/packaging/ipkg/control-freeswan 

cp $OPENSWANSRCDIR/packaging/ipkg/control-freeswan control 

tar -czf ./control.tar.gz ./conffiles ./control --owner=root --group=root 

tar -czf ./data.tar.gz ./* --owner=root --group=root --exclude=control.tar.gz --exclude=conffiles --exclude=control --exclude=debian-binary 

tar -czf $OPENSWANSRCDIR/packaging/ipkg/ipkg/freeswan-utils-$IPSECVERSION.arm.ipk ./debian-binary ./control.tar.gz ./data.tar.gz --owner=root --group=root 
mkdir -p $OPENSWANSRCDIR/packaging/ipkg/kernel-module 
cd $OPENSWANSRCDIR/packaging/ipkg/kernel-module 

rm -f *.tar.gz 
cp $OPENSWANSRCDIR/packaging/ipkg/debian-binary . 

cat $OPENSWANSRCDIR/packaging/ipkg/control-freeswan-module.dist | sed s/VERSION/$IPSECVERSION/ |sed s/ARCH/$ARCH/ > $OPENSWANSRCDIR/packaging/ipkg/control-freeswan-module 

cp $OPENSWANSRCDIR/packaging/ipkg/control-freeswan-module control 

tar czf ./control.tar.gz ./control --owner=root --group=root 

tar czf ./data.tar.gz * --owner=root --group=root --exclude=control.tar.gz --exclude=control --exclude=debian-binary 

tar czf $OPENSWANSRCDIR/packaging/ipkg/ipkg/freeswan-module-$IPSECVERSION.arm.ipk ./debian-binary ./control.tar.gz ./data.tar.gz --owner=root --group=root 
rm -rf $OPENSWANSRCDIR/packaging/ipkg/ipkg/binaries/* 
rm -rf $OPENSWANSRCDIR/packaging/ipkg/ipkg/kernel-module/*
